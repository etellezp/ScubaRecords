<h2>Dive Name: <%= @site.name %></h2>

<h3>Dive Location: <%= @site.location %></h3>

<% @site.records.each do |record| %>
  <p>
    Date: <%= record.date %>
  </p>

  <p>
    Dive Time: <%= record.dive_time %>
  </p>

  <p>
    Max Depth: <%= record.max_depth %>
  </p>

  <p>
    Water Temperature: <%= record.water_temperature %>
  </p>

  <p>
    Activity: <%= record.activity %>
  </p>

  <p>
    Notes: <%= record.notes %>
  </p>
  <hr>
<% end %>

<% if user_signed_in? && (current_user.id == params[:id].to_i) %>
<%= link_to "Edit Site", edit_user_site_path(current_user, @site) %>
<%= link_to "Delete Site", user_site_path(current_user, @site), method: :delete, data: { confirm: "Are you sure?" }  %>
<% end %>
