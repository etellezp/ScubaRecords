<h2>Dive Name: <%= @site.name %></h2>

<h3>Dive Location: <%= @site.location %></h3>

<h4><%= link_to "Add a New Record", new_site_record_path(@site)  %></h4>

<h3>Records:</h3>

<ol>
<% @site.records.each do |record| %>
  <li>
    <p>
      Date: <%= record.date %>
    </p>

    <p>
      Dive Time: <%= record.dive_time %>
    </p>

    <p>
      Max Depth: <%= record.max_depth %>
    </p>

    <p>
      Water Temperature: <%= record.water_temperature %>
    </p>

    <p>
      Activity: <%= record.activity %>
    </p>

    <p>
      Notes: <%= record.notes %>
    </p>

    <p>
      <% if user_signed_in? && (current_user.id == record.user_id) %>
        <%= link_to "Edit Record", edit_site_record_path(@site, record) %> |
        <%= link_to "Delete Record", site_record_path(@site, record) , method: :delete, data: { confirm: "Are you sure?" } %>
      <% end %>
    </p>
  </li>
  <hr>
  <% end %>
</ol>
