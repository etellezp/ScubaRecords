<div class="container mt-5 js-load-site-show">
  <div class="row">
    <div class="col-12 col-lg-6 d-flex justify-content-between align-items-center">
      <h3>Dive Sites</h3>
    </div>
    <div class="col-12 col-lg-6 align-items-center">
      <%= form_tag(sites_path, method: :get) do %>
        <div class="form d-flex align-items-center">
          <%= text_field_tag :site_name, params[:site_name], placeholder: "Search by name or location", class: "form-control form-control-sm" %>
          <%= submit_tag 'Search', name: nil, class: "btn btn-info btn-sm ml-2" %>
        </div>
      <% end %>
    </div>
  </div>

  <%= link_to "Click to see all sites", sites_path, class: "btn btn-primary btn-sm js-sites-button" %>

  <div class="mt-3 js-load-sites">

  </div>

</div>
