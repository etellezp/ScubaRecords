<%= form_tag(sites_path, method: :get) do %>
  <%= text_field_tag :site_name, params[:site_name] %>
  <%= submit_tag 'Search', name: nil %>
<% end %>

<% if @sites.blank? %>
  <h4>There are no recipes containing the term <%= params[:site_name] %>.</h4>
<% end %>

<% if user_signed_in? %>
  <h1><%= current_user.username.capitalize %> Dive Sites</h1>

  <p>
    <%= link_to "Back", user_path(current_user), class: "btn btn-outline-dark btn-sm" %>
    <%= link_to "Add a Site", new_user_site_path(current_user), class: "btn btn-outline-primary btn-sm" %>
  </p>

  <% @sites.each do |site| %>
    <p>Name: <%= link_to site.name, user_site_path(current_user, site) %></p>
    <p>Location: <%= site.location %></p>
    <hr>
  <% end %>
<% else %>
  <h1>Dive Sites</h1>

  <p>
    <%= link_to "Back", root_path, class: "btn btn-outline-dark btn-sm" %>
  </p>

  <% @sites.each do |site| %>
    <p>Name: <%= link_to site.name, site_path(site) %></p>
    <p>Location: <%= site.location %></p>
    <hr>
  <% end %>
<% end %>
