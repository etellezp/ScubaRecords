<%= form_for @site do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control col-sm-3" %>
  </p>

  <p>
    <%= f.label :location %>
    <%= f.text_field :location, class: "form-control col-sm-3" %>
  </p>

  <h3>Add a Record for this Dive Site</h3>

  <%= f.fields_for :records do |record| %>
    <p>
      <%= record.label :date %>
      <%= record.date_field :date, class: "form-control col-sm-3" %>
    </p>

    <p>
      <%= record.label :dive_time %>
      <%= record.text_field :dive_time, placeholder: "45 minutes", class: "form-control col-sm-3" %>
    </p>

    <p>
      <%= record.label "#{:max_depth} in Feet(f)" %>
      <%= record.number_field :max_depth, placeholder: "100", class: "form-control col-sm-3" %>
    </p>

    <p>
      <%= record.label "#{:water_temperature} in Fahrenheit" %>
      <%= record.number_field :water_temperature, placeholder: "65", class: "form-control col-sm-3" %>
    </p>

    <p>
      <%= record.label :notes %>
      <%= record.text_area :notes, class: "form-control col-sm-6" %>
    </p>

  <% end %>

  <%= f.submit "Create Site", class: "btn btn-primary" %>

<% end %>
