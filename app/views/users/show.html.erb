<% if user_signed_in? && current_user.id == @user.id %>

  <h1>Hello <%= @user.username.capitalize %>!</h1>

  <h3>What do you want to do?</h3>

  <p>
    <%= link_to "Add a Site", new_user_site_path(@user), class: "btn btn-outline-primary js-site-form-btn" %>

    <%= link_to "View all Sites", sites_path, class: "btn btn-outline-info" %>
  </p>

  <div class="mt-4 js-site-new-form">

  </div>

  <h3>Check your sites</h3>

  <div class="new-site-container">

  </div>
  
  <% @user.sites.uniq.each do |site| %>
    <div class="js-user-sites">
      <p>Name: <%= link_to site.name, site_path(site) %></p>
      <p>Location: <%= site.location %></p>
      <hr>
    </div>
  <% end %>
<% else %>
  <h3><%= @user.username.capitalize %>'s dive sites</h3>
  <% @user.sites.each do |site| %>
    <p>Name: <%= link_to site.name, site_path(site) %></p>
    <p>Location: <%= site.location %></p>
    <hr>
  <% end %>
<% end %>
