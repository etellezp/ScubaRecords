<%= form_for([@site, @record]) do |f| %>
<p>
  <%= f.label :date %>
  <%= f.text_field :date, class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :dive_time %>
  <%= f.text_field :dive_time, class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :max_depth %>
  <%= f.number_field :max_depth, class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :water_temperature %>
  <%= f.number_field :water_temperature, class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :notes %>
  <%= f.text_area :notes, class: "form-control col-sm-6" %>
</p>

<%= f.submit class: "btn btn-primary" %>
<% end %>
