<%= form_for([@site, @record]) do |f| %>
<p>
  <%= f.label :date %>
  <%= f.date_field :date, class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :dive_time %>
  <%= f.text_field :dive_time, placeholder: "45 minutes", class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label "#{:max_depth} in Feet(f)" %>
  <%= f.number_field :max_depth, placeholder: "100", class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label "#{:water_temperature} in Fahrenheit" %>
  <%= f.number_field :water_temperature, placeholder: "65", class: "form-control col-sm-3" %>
</p>

<p>
  <%= f.label :notes %>
  <%= f.text_area :notes, class: "form-control col-sm-6" %>
</p>

<%= f.submit class: "btn btn-primary" %>
<% end %>
