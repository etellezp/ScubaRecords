<h2 class="col-sm-6 offset-3">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="field offset-3">
    <%= f.label :username %><br />
    <%= f.text_field :username, autofocus: true, class: "form-control col-sm-6" %>
  </div>

  <div class="field offset-3">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control col-sm-6" %>
  </div>

  <div class="field offset-3">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control col-sm-6" %>
  </div>

  <div class="field offset-3">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control col-sm-6" %>
  </div>
  <br>
  <div class="actions offset-3">
    <%= f.submit "Sign up", class: "btn btn-primary" %>
    <%= link_to "Sign in with Google", user_google_oauth2_omniauth_authorize_path, class: "btn btn-primary" %>
  </div>

<% end %>
